{% extends 'admin_base.html.twig' %}

{% block title %}
  Livre
{% endblock %}

{% block admin_content %}
  <div class="row align-items-end gap-2 mb-3">
    <div class="col-auto me-auto">
      <h2 class="h4 mb-0">Liste des livres</h2>
    </div>

    <div class="col-auto">
      <a href="{{ path('app_admin_document_book_new') }}" class="btn btn-primary">Ajouter</a>
    </div>
  </div>

  <div class="table-responsive border rounded">
    <table class="table table-striped mb-0 align-middle">
      <thead class="table-bordered">
        <tr>
          <th>Id</th>
          <th>Titre</th>
          <th>Langage</th>
          <th>Date de Publication</th>
          <th>Isbn</th>
          <th>Pages</th>
          <th>actions</th>
        </tr>
      </thead>
      <tbody>
        {% for book in books %}
          <tr>
            <td>{{ book.id }}</td>
            <td>{{ book.title }}</td>
            <td>{{ book.langage }}</td>
            <td>{{ book.publicationDate ? book.publicationDate|date('Y-m-d') : '' }}</td>
            <td>{{ book.isbn }}</td>
            <td>{{ book.pages }}</td>
            <td>
              <div class="d-flex align-items-center gap-2">
                <a href="{{ path('app_admin_document_book_show', { id: book.id }) }}" class="btn btn-secondary">Afficher</a>
                <a href="{{ path('app_admin_document_book_edit', { id: book.id }) }}" class="btn btn-secondary">Modifier</a>
                {% include 'admin/document/book/_delete_form.html.twig' %}
              </div>
            </td>
          </tr>
        {% else %}
          <tr>
            <td colspan="7">aucun livre trouv√©</td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
{% endblock %}
